<!-- templates/challenge_entry/challenge_entries.html -->
{% extends "base.html" %}
{% block content_pane %}
	{% if challenge_entries %}
		<h3>Challenge Entries:</h3>
		<table>
			<thead>
				<tr>
					<th>Challenge:</th>
					<th>Response:</th>
					<th>Time Started:</th>
					<th>Time Completed:</th>
					<th>Correct?</th>
					<th>Owner:</th>
					<th>More Info:</th>
				</tr>
			</thead>
			<tbody>
				{% for entry in challenge_entries %}
					<tr>
						<td>{{entry.challenge.name}}</td>
						<td>{{entry.response}}</td>
						<td>{{entry.time_started}}</td>
						<td>{{entry.time_completed}}</td>
						<td>{{entry.correct|yesno:"Yes.,No.,Unknown."}}</td>
						<td>{{entry.owner.user.username}}</td>
						<td>
							<a href={{entry.get_absolute_url}}>More Info</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<h4>There are no Challenge Entries.</h4>	
	{% endif %}
{% endblock %}
